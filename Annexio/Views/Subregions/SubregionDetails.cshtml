@model Annexio.Models.Subregion

@{
    ViewBag.Title = "SubregionDetails";
}

<h2>Subregion Details</h2>
<hr />
<div>    
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Population)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Population)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Region)
        </dt>
        <dd>
            <a href=@Url.Action("RegionDetails", "Regions", new { regionName = Model.Region }, null)>@Model.Region</a>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Countries)
        </dt>
        @foreach (var country in Model.Countries)
        {
            <dd>
                @Html.ActionLink(country.Name, "Details", "Countries", new { name = country.Name}, null)
            </dd>
        }




    </dl>
</div>

