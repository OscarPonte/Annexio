@model IEnumerable<Annexio.Models.Country>

@{
    ViewBag.Title = "Index";
}

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Region)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subregion)
        </th>
    </tr>

@foreach (var country in Model) {
    <tr class="info">
        <td>
            @Html.ActionLink(country.Name, "Details", new { name = country.Name })
        </td>
        <td>
            <a href=@Url.Action("RegionDetails", "Regions", new { regionName = country.Region })>@country.Region</a>
        </td>
        <td>
            <a href=@Url.Action("SubregionDetails", "Subregions", new { subregionName = country.Subregion })>@country.Subregion</a>
        </td>    
    </tr>
}

</table>
